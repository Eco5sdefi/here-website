    body
      include /header/index.pug
      +header("/mint")

      .rectangles-group
        img(src="../assets/mint/background.png")
      .page 
        section.mint-interlude
          .mint-line
            h1.mint-title
              | Free mint here
            p.mint-text
              | Free mint will be available at Aug, 25. 00:00 PST. Connect HERE Wallet to get a notification.
          .mint-status
            .mint-status-item.prizes
              p.item-title Available in prizes
              h3.item-value.green $1,000
            .mint-status-item.time
              p.item-title Time to mint
              h3.item-value#time-to-mint 00:02:02:01
            .mint-status-item
              p.item-title Total minted
              h3.item-value 0
          .mint-buttons
            button.mint-button-connect Connect wallet
            button.mint-button-more Learn more
          .mint-connect
            .mint-connect-items
              .connect-item
                img(src="../assets/mint/flying-box.png").flying-box
                img(src="../assets/mint/case-bg.svg").flying-box-back
                a.connect-link
                  img(src="../assets/mint/link-arrow.svg")
                  .connect-link-text
                    p.link-text Connect to mint
                    p.link-hover-text Connect to mint
              .connect-item
                img(src="../assets/mint/flying-box.png").flying-box
                img(src="../assets/mint/case-bg.svg").flying-box-back
                a.connect-link
                  img(src="../assets/mint/link-arrow.svg")
                  .connect-link-text
                    p.link-text Connect to mint
