                    img(src="../assets/mint/mutation.svg").mutation
              .nft-open-case
                img(src="../assets/mint/nft-light.svg").nft-item-light
                img(src="../assets/mint/nft-case.svg").nft-item-case
              .nft-item-text
                p.title 1 Mutation
                p.subtitle (Price: 99$, 1 chest)
        
        .page-background
        section.mint-timeline
          h1 Timeline
          .timeline-items
            .timeline-item.active
              .timeline-item-image
                img(src="../assets/mint/timeline-qr.svg")
              .timeline-item-dates Aug, 21 - Aug, 24
              .timeline-item-title Collecting applications
              .timeline-item-text Scan QR to set reminder
            .timeline-item
