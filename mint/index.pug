                img(src="../assets/mint/nft-case.svg").nft-item-case
              .nft-item-text
                p.title 5 HERE NFT
                p.subtitle (Floor $50, 5 chests)
            .nft-item
              .nft-small-images
                .container
                  img(src="../assets/mint/150-1.svg").score-1
                  img(src="../assets/mint/150-2.svg").score-2
                  img(src="../assets/mint/150-3.svg").score-3
              .nft-open-case
                img(src="../assets/mint/nft-light.svg").nft-item-light
                img(src="../assets/mint/nft-case.svg").nft-item-case
