header.header
  .header-center
    img.header-logo(src='/assets/logo.svg' alt='logo')
    .header-links
      for item in header.links
        a.header-link(href=item.link)= item.text

    .header-waitlist.waitlist-button
      a Android waiting list

    button.header-action

  .header-body 
    .header-mobile-links
      for item in header.links
        a.header-link(href=item.link)= item.text
      
    .header-form
      p.header-form-title
        | Android waiting list
        span .
      
      input.here-input(placeholder="Phone number")
      button.here-button.light Submit 
      .header-form-hr Or
      a.here-button.pink.light(href=common.appStore)
        | Download on App Store

.float-qr
  img(src=floatqr.qrcode)
  p= floatqr.qrcodeLocale

.scroll-up
  img(src="/assets/icons/arrow.up.svg")