mixin header(active, useWhite)
  header.header
    .header-center
      a(href="/", style="display: flex").link-logo
        img.header-logo(src='/assets/logo.svg' alt='logo')
      
      .header-links
        for item in header.links
          if active == item.link
            if useWhite
              a.header-link.active-white(href=item.link) !{item.text}
            else 
              a.header-link.active(href=item.link) !{item.text}

          else
            a.header-link(href=item.link) !{item.text}
      .header-right
        for item in header.downloads
          a.header-download(href=item.link) !{item.text}

          .header-waitlist.waitlist-button
            a !{waiting.title}

      button.header-action

    .header-body
      .header-mobile-links
        for item in header.links
          if active == item.link
            if useWhite
              a.header-link.active-white(href=item.link) !{item.text}
            else 
              a.header-link.active(href=item.link) !{item.text}

          else
            a.header-link(href=item.link) !{item.text}
        a(href=common.partnershipLink).header-link !{common.partnership}
        
      .header-form
        p.header-form-title
          | Binance waiting list
          span .
        
        input.here-input(placeholder="Near username")
        button.here-button.light Submit 
        .header-form-hr or
        a.here-button.pink.light.appstore(href=common.appStore)
          | Download on App Store
        a.here-button.sunyellow.light.appandroid(href=common.appAndroid)
          | !{common.appAndroidTitle}
        for item in header.downloads
          a.header-download.apprandom(href=item.link) !{item.text}


.preheader
  .preheader-center
    .preheader__left.preheader-column
      img.preheader_big-brain.preheader-logo(src='/assets/logo-big-brain.svg' alt='Big Brain')
      img.preheader_near.preheader-logo(src='/assets/logo-near.svg' alt='Near')
    .preheader__right.preheader-column
      a(href=common.partnershipLink).partnership !{common.partnership}
      img.preheader_powered-by-near.preheader-logo(src='/assets/powered-by-near.svg' alt='Powered by Near')
.header-note
  p Join our bi-weekly community call on Saturdays! <a href="#">Click here to join</a>
  span.header-note__close
.float-qr
  .qrcode
  p !{floatqr.qrcodeLocale}

.scroll-up
  img(src="/assets/icons/arrow.up.svg")