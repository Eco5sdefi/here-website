section.news
  h2 #{news.title}
  .news-list
    for item in news.items
        .news-item
            img(src=item.image)
            .news-item-content
                h3= item.header
                p= item.text

                a(href=item.url)
                    | Read more
                    img(src='/assets/icons/link-arrow.svg')
