	body.white
		include ../landing/header/index.pug
		+header("/")
		
		.header-status
			.header-status__title
				h1 Binance waitlist
				p Earn 4$ for connect.
				p Only for the first 1000 activations.
				.header-status__links.desktop-view
					a(href="https://medium.com/@nearhere/here-binance-connect-and-earn-4-aab88341fe1e",target="_blank").here-button.here-button-orange Learn more
					.here-button.pink.waitlist-button-join Join waitlist
			.header-status__date.date-block
				.date-block__top
					.date-block__column
						span Accounts with&nbsp;access
						strong.ac-withaccess
					.date-block__column
						span Accounts in&nbsp;waitlist
						strong.ac-waitlist
					.date-block__column
						span Prizes distributed
						strong.prizes-distributed $0
				.date-block__bottom
					.date-block__timer-text Every 24h we unlock the feature to 10 users
					.date-block__timer-counter.timer
						.timer__items.timer__days
						span.timer__pointer :
						.timer__items.timer__hours
						span.timer__pointer :
						.timer__items.timer__minutes
						span.timer__pointer :
						.timer__items.timer__seconds
			.header-status__links.mobile-view
				a(href="https://medium.com/@nearhere/here-binance-connect-and-earn-4-aab88341fe1e").here-button.here-button-orange Learn more
				.here-button.pink.waitlist-button-join Join waitlist
		.list-block
			h2 Users with unlocked feature
			.list-block__table
			span.three-dots
				span
			a(href="#").list-block__link.block-link
		

		.nonlist-block
			h2 Top 50. 10 to be unlocked.
			.nonlist-block__table
			span.three-dots
				span
			a(href="#").nonlist-block__link.block-link

