						a(href='/stemmy/en') Play to learn
			.header-right
				.header-social
					a(href="https://t.me/herewallet", target="_blank", rel="nofollow")
						include images/tme.svg
					a(href="https://twitter.com/here_wallet", target="_blank", rel="nofollow")
						include images/twitter.svg
					a(href="https://discord.gg/8Q3gw3gsD2", target="_blank", rel="nofollow")
						img(src="https://static.tildacdn.com/tild3832-3937-4736-a565-386639373830/Frame_147_4.png", alt="website icon")
					a(href="https://awesomenear.com/here-wallet", target="_blank", rel="nofollow")
